###############################################################################
#									STANDARS								  #
###############################################################################
NAME 		= 		push_swap
RM 			= 		rm -f

###############################################################################
#									COMPILER								  #
###############################################################################

CC 		= 		gcc
CCFLAGS	= 		-Wall -Wextra -Werror

###############################################################################
#									SRC										  #
###############################################################################

SRC 	= 	main.c init_node.c \
			init_stacks.c my_error.c mains_stack.c my_split.c\
			push.c reverse_rotate.c rotates.c swap.c utils_stacks.c

OBJ 	= 		$(SRC:.c=.o)

###############################################################################
#						          SRC BONUS			   						  #
###############################################################################



###############################################################################
#									INLUDES									  #
###############################################################################

INLUDE = push_swap.h

###############################################################################
#									RULES									  #
###############################################################################

all: $(NAME)

$(NAME): $(OBJ) $(INCLUDE)
	$(CC) $(CCFLAGS) libft.a -o $(NAME) $(OBJ) 

%.o: %.c
	$(CC) $(CCFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJ) $(BONUSOBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

rebonus: fclean bonus

.PHONY: all clean fclean re
